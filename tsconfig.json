{
  "compilerOptions": {
    "module": "ES2022", //stopped warnings about dynamic import
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true
  },
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": [
    "**/node_modules/**",
    "**/.cache/**",
    "**/.git/**",
    "**/assets/icons/**",
    "**/dist/**",
    "**/temp/**"
  ]
}
